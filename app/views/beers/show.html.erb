<p id="notice"><%= notice %></p>

<p>
	<strong>Name:</strong>
	<%= @beer.name %>
</p>

<p>
	<strong>Style:</strong>
	<%= @beer.style %>
</p>

<p>
	<strong>Brewery:</strong>
	<%= @beer.brewery_id %>
</p>

<p>
	<% if @beer.ratings.empty? %>
	 	This beer has not yet been rated!
	<% else %>
		<%= "Beer has #{pluralize(@beer.ratings.count, 'rating', 'ratings')}, average #{@beer.average_rating}" %>
	<% end %>
</p>

<% if current_user %>
	<h4>give a rating:</h4>
	<%= form_for(@rating) do |f| %>
		<%= f.hidden_field :beer_id %>
		score: <%= f.number_field :score %>
    	<%= f.submit %>
  	<% end %>
<% end %>

<br><hr/>
<%= link_to ('Edit', edit_beer_path(@beer)) if current_user %>
<%= link_to 'Back', beers_path %>