<div class="panel panel-default">
  <table class="table table-hover">
	  <thead>
			<tr>  
	      <th>Name</th>
	      <th>Description</th>
	      <th>Average score</th>
	      <th><%= "Actions" if current_user %></th>
	    </tr>
	  </thead>
	  <tbody>
	  	<% @styles.each do |style| %>
		  	<tr>
	    		<td><%= link_to style.name, style %></td>
	    		<td><%= truncate style.description, length: 128 %></td>
	    		<td><%= round(style.average_rating) %>
            <% if style.average_rating >= 10 %> 
              <span class="glyphicon glyphicon-fire hot" aria-hidden="true"></span>
            <% end %>
        	</td>
	    		<td>
	    			<div class="btn-group" role="group" aria-label="true">
	    				<% if current_user %>
	      				<%= link_to 'Edit', edit_style_path(style), class:'btn btn-warning btn-xs' %>
	      				<%= link_to 'Destroy', style, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-xs' if current_user.admin %>
      				<% end %>
      			</div>
	    		</td>
	    	</tr>
    	<% end %>
  	<tbody>
	</table>
</div>
