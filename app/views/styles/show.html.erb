<p id="notice"><%= notice %></p>

<h1>
  <%= @style.name %>
</h1>

<p>
  <%= @style.description %>
</p>

<% if @style.beers.count > 0 %>
	<h3>Beers</h3>
	<ul>
	<% @style.beers.each do |b| %>
		<li><%= link_to b.name, b %> by <%= link_to b.brewery.name, b.brewery %></li>
	<% end %>
	</ul>
<% end %>

<br><hr/>
<%= link_to 'Edit', edit_style_path(@style) %> |
