<p id="notice"><%= notice %></p>

<h1>Listing Breweries</h1>
<p>Number of breweries: <%= "#{@breweries.count}" %></P>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <% if current_user %>
        <th colspan="2">Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <% if current_user %>
          <td><%= link_to 'Edit', edit_brewery_path(brewery), class:'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', brewery, class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to('New Brewery', new_brewery_path, class:'btn btn-default') if current_user %>