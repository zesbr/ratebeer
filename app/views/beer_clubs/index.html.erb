<p id="notice"><%= notice %></p>

<h1>Listing Beer Clubs</h1>
<p>Number of clubs: <%= "#{@beer_clubs.count}" %></P>
<hr/>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Founded</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beer_clubs.each do |beer_club| %>
      <tr>
        <td><%= link_to beer_club.name, beer_club %></td>
        <td><%= beer_club.founded %></td>
        <td><%= beer_club.city %></td>
        <td><%= link_to('Edit', edit_beer_club_path(beer_club)) if current_user %></td>
        <td><%= link_to('Destroy', beer_club, method: :delete, data: { confirm: 'Are you sure?' }) if current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to('New Beer club', new_beer_club_path) if current_user %>
