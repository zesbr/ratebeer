<div class="panel panel-default">
	<div class="table-responsive">
		<table class="table table-hover table-condensed">
			<thead>
		    <tr>
		      <th>Name</th>
		      <th>Founded</th>
		      <th>City</th>
		      <% if current_user %>
		        <th colspan="2">Actions</th>
		      <% end %>
		    </tr>
		  </thead>
		  <tbody>
		    <% beer_clubs.each do |beer_club| %>
		      <tr>
		        <td><%= link_to beer_club.name, beer_club %></td>
		        <td><%= beer_club.founded %></td>
		        <td><%= beer_club.city %></td>
		        <% if current_user %>
		        	<td>
		        		<div class="btn-group" role="group" aria-label=""true>
		          	<%= link_to 'Edit', edit_beer_club_path(beer_club), class:'btn btn-warning btn-xs' %>
		          	<%= link_to 'Destroy', beer_club, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-xs' if current_user.admin? %>
		        		</div>
		        	</td>
		        <% end %>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>
