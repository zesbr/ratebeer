<div class="panel panel-default">
	<table class="table table-hover">
	  <thead>
	    <tr>
	      <th>Username</th>
				<th>Rated beers</th>
				<th>Tota ratings</th>
				<th>Status</th>
				<th><%= "Actions" if current_user %></th>
	    </tr>
	  </thead>
	  <tbody>
	    <% users.each do |user| %>
	      <tr>
					<td><%= link_to user.username, user %></td>
					<td><%= user.beers.size %></td>
					<td><%= user.ratings.size %></td>
					<td>
						<% if user.locked? %>
          		<span class="label label-danger">Locked</span>
          	<% else %>
          		<span class="label label-success">Active</span>
          	<% end %>
					</td>
					<td>
						<div class="btn-group" role="group" aria-label=""true>	
							<% if current_user && current_user.admin %>	
              	<%= link_to 'Edit', edit_user_path(user), class:'btn btn-warning btn-xs' %>
              	<%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-xs' %>
          		<% elsif user == current_user %>	
              	<%= link_to 'Edit', edit_user_path(user), class:'btn btn-warning btn-xs' %>
              	<%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-xs' %>
							<% end %>		
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
