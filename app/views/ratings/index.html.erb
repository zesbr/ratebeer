<h1>List of ratings</h1>
<p>Total of <%= pluralize(@ratings.count, 'rating', 'ratings') %> given</p>
<ul>
 <% @ratings.each do |rating| %>
   <li> <%= rating %> <%= link_to rating.user.username, rating.user %> </li>
 <% end %>
</ul>
<% unless current_user.nil? %> 	
	<%= link_to 'New Rating', new_rating_path, class:'btn btn-default' %>
<% end %>
